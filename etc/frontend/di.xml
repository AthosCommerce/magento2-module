<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="AthosCommerce\Feed\Api\ConfigInterface"
                type="AthosCommerce\Feed\Service\Config" />
    <preference for="AthosCommerce\Feed\Service\Tracking\QuoteItemPriceResolverInterface"
                type="AthosCommerce\Feed\Service\Tracking\CompositeQuoteItemPriceResolver" />
    <preference for="AthosCommerce\Feed\Service\Tracking\OrderItemPriceResolverInterface"
                type="AthosCommerce\Feed\Service\Tracking\CompositeOrderItemPriceResolver" />
    <preference for="AthosCommerce\Feed\Service\Tracking\SkuResolverInterface"
                type="AthosCommerce\Feed\Service\Tracking\CompositeSkuResolver" />

    <type name="AthosCommerce\Feed\Service\Tracking\CompositeOrderItemPriceResolver">
        <arguments>
            <argument name="orderItemPriceResolversPool" xsi:type="array">
                <item name="simple" xsi:type="object">AthosCommerce\Feed\Service\Tracking\OrderItemPriceResolver</item>
                <item name="bundle" xsi:type="object">AthosCommerce\Feed\Service\Tracking\OrderItemPriceResolver</item>
                <item name="grouped" xsi:type="object">AthosCommerce\Feed\Service\Tracking\OrderItemPriceResolver</item>
                <item name="configurable" xsi:type="object">AthosCommerce\Feed\Service\Tracking\OrderItemPriceResolver</item>
                <item name="virtual" xsi:type="object">AthosCommerce\Feed\Service\Tracking\OrderItemPriceResolver</item>
                <item name="downloadable" xsi:type="object">AthosCommerce\Feed\Service\Tracking\OrderItemPriceResolver</item>
                <item name="giftcard" xsi:type="object">AthosCommerce\Feed\Service\Tracking\OrderItemPriceResolver</item>
            </argument>
            <argument name="defaultPriceResolver" xsi:type="object">AthosCommerce\Feed\Service\Tracking\OrderItemPriceResolver</argument>
        </arguments>
    </type>

    <type name="AthosCommerce\Feed\Service\Tracking\CompositeQuoteItemPriceResolver">
        <arguments>
            <argument name="quoteItemPriceResolversPool" xsi:type="array">
                <item name="simple" xsi:type="object">AthosCommerce\Feed\Service\Tracking\QuoteItemPriceResolver</item>
                <item name="bundle" xsi:type="object">AthosCommerce\Feed\Service\Tracking\QuoteItemPriceResolver</item>
                <item name="grouped" xsi:type="object">AthosCommerce\Feed\Service\Tracking\QuoteItemPriceResolver</item>
                <item name="configurable" xsi:type="object">AthosCommerce\Feed\Service\Tracking\QuoteItemPriceResolver</item>
                <item name="virtual" xsi:type="object">AthosCommerce\Feed\Service\Tracking\QuoteItemPriceResolver</item>
                <item name="downloadable" xsi:type="object">AthosCommerce\Feed\Service\Tracking\QuoteItemPriceResolver</item>
                <item name="giftcard" xsi:type="object">AthosCommerce\Feed\Service\Tracking\QuoteItemPriceResolver</item>
            </argument>
            <argument name="defaultPriceResolver" xsi:type="object">AthosCommerce\Feed\Service\Tracking\QuoteItemPriceResolver</argument>
        </arguments>
    </type>

    <type name="AthosCommerce\Feed\Service\Tracking\CompositeSkuResolver">
        <arguments>
            <argument name="skuResolversPool" xsi:type="array">
                <item name="simple" xsi:type="object">AthosCommerce\Feed\Service\Tracking\ProductSkuResolver</item>
                <item name="bundle" xsi:type="object">AthosCommerce\Feed\Service\Tracking\ProductSkuResolver</item>
                <item name="grouped" xsi:type="object">AthosCommerce\Feed\Service\Tracking\ProductSkuResolver</item>
                <item name="configurable" xsi:type="object">AthosCommerce\Feed\Service\Tracking\ProductSkuResolver</item>
                <item name="virtual" xsi:type="object">AthosCommerce\Feed\Service\Tracking\ProductSkuResolver</item>
                <item name="downloadable" xsi:type="object">AthosCommerce\Feed\Service\Tracking\ProductSkuResolver</item>
                <item name="giftcard" xsi:type="object">AthosCommerce\Feed\Service\Tracking\ProductSkuResolver</item>
            </argument>
            <argument name="defaultSkuResolver" xsi:type="object">AthosCommerce\Feed\Service\Tracking\ProductSkuResolver</argument>
        </arguments>
    </type>

    <type name="Magento\Customer\CustomerData\SectionPoolInterface">
        <arguments>
            <argument name="sectionSourceMap" xsi:type="array">
                <item name="athoscommerce-tracking" xsi:type="string">AthosCommerce\Feed\CustomerData\Tracking</item>
            </argument>
        </arguments>
    </type>
</config>
