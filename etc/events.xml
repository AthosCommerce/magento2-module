<?xml version="1.0" encoding="UTF-8"?>


<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">

    <event name="catalog_product_save_after">
        <observer name="AthosCommerce_Product_UpdateObserver"
                  instance="AthosCommerce\Feed\Observer\Product\UpdateObserver"/>
    </event>
    <event name="catalog_product_delete_after_done">
        <observer name="AthosCommerce_Product_DeleteObserver"
                  instance="AthosCommerce\Feed\Observer\Product\DeleteObserver" />
    </event>
    <event name="catalog_product_import_bunch_save_after">
        <observer name="AthosCommerce_Product_BunchSaveObserver"
                  instance="AthosCommerce\Feed\Observer\Product\BunchSaveObserver" />
    </event>
    <event name="catalog_product_import_bunch_delete_after">
        <observer name="AthosCommerce_Product_BunchDeleteObserver"
                  instance="AthosCommerce\Feed\Observer\Product\BunchDeleteObserver" />
    </event>

    <!-- Custom Events -->
    <event name="athos_create_task_api_save_after">
        <observer name="Athoscommerce_TaskSaveAfter"
                  instance="AthosCommerce\Feed\Observer\TaskSaveAfterObserver" />
    </event>
</config>
